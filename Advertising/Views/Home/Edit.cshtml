@Html.ActionLink("Properties", "Index", "Property", new { categoryId = Model.Id })


Subcategories

@if (Model.SubCategoriesList.Any())
{
	@foreach (var cat in Model.SubCategoriesList)
	{
		<div class="esh-catalog-item col-md-4">
			<tr>
				<td>
					@Html.Label(cat.Name + cat.Id)
					@Html.ActionLink("Delete", "Delete", "Home", new { categoryId = cat.Id })
					@Html.ActionLink("Edit", "Edit", "Home", new { id = cat.Id })
				</td>
			</tr>
		</div>
	}
}
